@using Operando_AdministrationConsole.Helper
@{
    ViewBag.Title = "Notifications";
    Layout = "~/Views/Shared/_LayoutOperando.cshtml";
}

<!-- BEGIN PAGE BASE CONTENT -->

<div class="m-heading-1 border-grey-silver m-bordered">
	<p>
		Events relevant to you <i>(e.g. pending data access requests, recommended/automatic changes to settings)</i> are displayed in this section. Requests are shown with the most recent first, and you can filter or search through the logs.
		<br/><br/>
	</p>
</div>

<div class="portlet light">
	<div class="portlet-title">
		<div class="caption col-md-5">
			<i class="icon-bell"></i>
			<span class="caption-subject font-yellow-gold bold uppercase"> NOTIFICATIONS </span>
		</div>
		<div class="col-md-7">
			<div class="form-group">
				<label class="control-label text-right col-md-3" style="line-height: 2;">Filter</label>
				<div class="col-md-9">
					<select class="bs-select form-control" multiple>
						<option>Pending</option>
						<option>Approved</option>
						<option>Rejected</option>
					</select>
				</div>
			</div>
		</div>
	</div>
	<div class="portlet-body">

		<table class="table table-striped table-bordered table-hover order-column" id="notifications_list">
			<thead>
			<tr>
				<th></th>
				<th>Date</th>
				<th>Message</th>
				<th>Link</th>
			</tr>
			</thead>
			<tbody>
			
			@foreach (AmiRandoStubHelper.Notification notification in AmiRandoStubHelper.GetStubNotifications())
			{
				<tr>
					<td>
						<div class="label label-sm label-default">
							<i class="icon-bell"></i>
						</div> <span class="hidden">Pending</span>
					</td>
					<td> @notification.DateTime </td>
					<td style="white-space: pre-wrap;">@notification.Message</td>
					<td>
						@if (notification.Link != null)
						{
							<a class="btn btn-circle btn-sm yellow-gold" href="@notification.Link"> @notification.LinkText </a>
						}
					</td>
				</tr>
			}

			</tbody>
		</table>

	</div>
</div>

<!-- END PAGE BASE CONTENT -->


