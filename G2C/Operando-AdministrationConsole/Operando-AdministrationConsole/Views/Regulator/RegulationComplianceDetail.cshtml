<script type="text/javascript">

    // Il numero che gli viene passato è quello da mantenere, gli altri vengono nascosti
    function hideTab(prefisso, numero)
    {
        $('div[id^=' + prefisso + ']').hide();
        $('#' + prefisso + numero).show();
        if (numero == "")
        {
            $('#warningNoModule').show();
        }
        else {
            $('#warningNoModule').hide();
        }
    }

    function getUrlVars() {
        var vars = [], hash;
        var hashes = window.location.href.slice(window.location.href.indexOf('?') + 1).split('&');
        for (var i = 0; i < hashes.length; i++) {
            hash = hashes[i].split('=');
            vars.push(hash[0]);
            vars[hash[0]] = hash[1];
        }
        return vars;
    }

    $(document).ready(function () {

        $('#warningNoModule').hide();
        var regulation = getUrlVars()["regulation"];
        if (parseInt(regulation) == 1)
        {
            $('#selectRegulation').val(regulation);
            $('#warningNoModule').hide();
            $('#tabRegulation' + regulation).show();

        }
        else
            if (parseInt(regulation) == 2) {
                $('#selectRegulation').val(regulation);
                $('#warningNoModule').hide();
                $('#tabRegulation' + regulation).show();
            }
            else
                $('#warningNoModule').show();

        var osp1 = getUrlVars()["regulation"];
        $('#lblRegulation1Title').text(osp1);
        $('#lblRegulation2Title').text(osp1);

        var osp2 = getUrlVars()["osp"];
        $('#lblRegulation1Osp').text(osp2);
        $('#lblRegulation2Osp').text(osp2);
        $('#lblRegulationTitleRegulation1Osp1').text(osp2);
        $('#lblRegulationTitleRegulation1Osp2').text(osp2);
        $('#lblRegulationTitleRegulation1Osp3').text(osp2);
        $('#lblRegulationTitleRegulation1Osp4').text(osp2);
        $('#lblRegulationTitleRegulation1Osp5').text(osp2);
        $('#lblRegulationTitleRegulation1Osp6').text(osp2);
        $('#lblRegulationTitleRegulation2Osp1').text(osp2);
        $('#lblRegulationTitleRegulation2Osp2').text(osp2);
        $('#lblRegulationTitleRegulation2Osp3').text(osp2);
        $('#lblRegulationTitleRegulation2Osp4').text(osp2);
        $('#lblRegulationTitleRegulation2Osp5').text(osp2);
        $('#lblRegulationTitleRegulation2Osp6').text(osp2);
