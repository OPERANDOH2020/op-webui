@{
    ViewBag.MenuSection = "Regulator";
    ViewBag.Title = "Policy Statements";
    Layout = "~/Views/Shared/_LayoutOperando.cshtml";
}


<script type="text/javascript">

    // Il numero che gli viene passato è quello da mantenere, gli altri vengono nascosti
    function hideTab(prefisso, numero)
    {
        $('div[id^=' + prefisso + ']').hide();
        $('#' + prefisso + numero).show();
    }

</script>

<!-- BEGIN PAGE BASE CONTENT -->
<div class="portlet-body font-grey-gallery">

    <div class="m-heading-1 border-grey-silver m-bordered">
        <p>
            Enter Privacy Policy Statements to be compared to existing Privacy Regulations.
        </p>
    </div>


    <div class="tabbable-custom-operando col-md-12 col-sm-12 col-xs-12">

        <!--  -------------------------- NAVIGATION MENU TOP ------------------------------------------ -->

        <div class="col-md-12 col-sm-12 col-xs-12 tabs-custom-operando">

            <div class="tab-content">


                <!--  ------------------------------------------------------------------------------------------ -->
                <!--  -------------------------- BEGIN POLICY STATEMENTS --------------------------------------- -->
                <!--  ------------------------------------------------------------------------------------------ -->
                <div class="portlet-body light tab-pane active" id="policyStatements">


                    <div class="portlet light">
                        <div class="portlet-title">
                            <div class="caption">
                                POLICY STATEMENTS</span>
                            </div>
                        </div>

                        <div class="dataTables_length" id="reports_osp_length">
                            <label>
                                Regulation
                                <select name="selcetPolicyStatements" aria-controls="reports_psp" class="form-control input-sm input-xsmall input-inline">
                                    <option value="">Select...</option>
                                    <option value="Cancel">Regulation 1</option>
                                    <option value="Cancel">Regulation 2</option>
                                </select>
                            </label>&nbsp;<button type="submit" class="btn orange uppercase">Show</button>
                        </div>
                    </div>



                    <div class="tab-content">

                        No regulation has been selected
                    </div>

                </div>

            </div>
        </div>
    </div>
</div>

<!-- END PAGE BASE CONTENT -->


@section PagePluginStyles {
    <link href="~/assets/global/plugins/bootstrap-sweetalert/sweetalert.css" rel="stylesheet" type="text/css" />
}

@section PageStyles {

}

@section PagePlugins {
    <script src="~/assets/global/plugins/bootstrap-confirmation/bootstrap-confirmation.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-sweetalert/sweetalert.min.js" type="text/javascript"></script>
}

@section PageScripts {
    <script src="~/assets/pages/scripts/ui-confirmations.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/ui-sweetalert.min.js" type="text/javascript"></script>
}



