
@{
    ViewBag.Title = "Login";
    ViewBag.BodyCssClass = "login";
    Layout = "~/Views/Shared/_LayoutAccessOperando.cshtml";
}

<!-- BEGIN LOGO -->
<div class="logo">
    @*<a href="@Url.Action("Index","Dashboard")">
        <img src="~/assets/layouts/operando/img/logo-white-full-450.png" alt="" />
    </a>*@
    <img src="~/assets/layouts/operando/img/logo-white-full-450.png" alt="" />
</div>
<!-- END LOGO -->
<!-- BEGIN LOGIN -->
<div class="content">
    <!-- BEGIN LOGIN FORM -->
    <!-- Form modified by IT Innovation Centre 2016 -->
    <!--form class="login-form" action="@Url.Action("Index","Dashboard")" method="post"-->
        <form class="login-form" method="post">
            <h3 class="form-title font-yellow-gold">@Resources.WebResources.LoginTitle</h3>
            <div class="alert alert-danger display-hide">
                <button class="close" data-close="alert"></button>
                <span> @Resources.WebResources.LoginSubtitle</span>
            </div>
            <div class="form-group">
                <!--ie8, ie9 does not support html5 placeholder, so we just show field title for that-->
                <label class="control-label visible-ie8 visible-ie9">@Resources.WebResources.LoginUsername</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="text" autocomplete="off" placeholder="Username" name="username" />
            </div>
            <div class="form-group">
                <label class="control-label visible-ie8 visible-ie9">@Resources.WebResources.LoginPassword</label>
                <input class="form-control form-control-solid placeholder-no-fix" type="password" autocomplete="off" placeholder="Password" name="password" />
            </div>
            <div class="form-actions">
                <button type="submit" class="btn orange uppercase">@Resources.WebResources.LoginButton</button>
                <label class="rememberme check mt-checkbox mt-checkbox-outline">
                    <input type="checkbox" name="remember" value="1" />Remember
                    <span></span>
                </label>
                <a href="@Url.Action("ResetPassword","Access")" id="forget-password" class="forget-password font-yellow-gold">@Resources.WebResources.LoginPasswordForgot</a>
            </div>

            @if (System.Web.Configuration.WebConfigurationManager.AppSettings["hideNonProductionReadyPages"] == "false")
            {
            <div class="login-options hide">
                <h4>Or login with</h4>
                <ul class="social-icons">
                    <li>
                        <a class="social-icon-color facebook" data-original-title="facebook" href="javascript:;"></a>
                    </li>
                    <li>
                        <a class="social-icon-color twitter" data-original-title="Twitter" href="javascript:;"></a>
                    </li>
                    <li>
                        <a class="social-icon-color googleplus" data-original-title="Goole Plus" href="javascript:;"></a>
                    </li>
                    <li>
                        <a class="social-icon-color linkedin" data-original-title="Linkedin" href="javascript:;"></a>
                    </li>
                </ul>
            </div>
            <div class="create-account">
                <p>
                    <a href="@Url.Action("Registration", "Access")" id="register-btn" class="uppercase font-yellow-gold">Create an account</a>
                </p>
            </div>
            }
        </form>
        <!-- END LOGIN FORM -->

</div>
<div class="page-footer-custom"> 2016 &copy; Operando </div>



