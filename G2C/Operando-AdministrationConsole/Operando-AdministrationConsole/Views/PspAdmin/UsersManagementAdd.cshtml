<div class="tab-content">
    <div class="tab-pane fade in active" id="tabUserManagement02">

        <div class="portlet light bordered">
            <div class="portlet-body">
                <div class="tabbable-custom tabbable-custom-operando-top">

                    <div class="tab-content">
                        <div class="portlet light">
                            <div class="portlet-title">

                                <div class="caption">
                                    <span class="caption-subject font-dark bold uppercase">Add New User</span>
                                </div>
                            </div>
                            <span class="font-dark">Create a brand new user and add them to this Operando</span>


                        </div>

                        <div class="portlet-body">
                            <div class="scroller" style="height:300px" data-always-visible="1" data-rail-visible1="1">

                                <div class="row">
                                    <div class="col-md-12">
                                        <form class="form-horizontal" role="form">
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Username</label>
                                                <div class="col-md-6">
                                                    <input type="text" id="Username_add" class="form-control" placeholder="Username required">
                                                </div>
                                            </div>
                                            <div class="form-group">
                                                <label class="col-md-3 control-label">E-mail</label>
                                                <div class="col-md-6">
                                                    <input type="text" id="E-mail_add" class="form-control" placeholder="E-mail required">
                                                </div>
                                            </div>

                                            <div class="form-group">
                                                <label class="col-md-3 control-label">User type</label>
                                                <div class="col-md-6">
                                                    <select id="UserType_add" class="form-control bs-select">
                                                        <option value="0" selected="">UPP</option>
                                                        <option value="1" selected="">OSP Admin</option>
                                                        <option value="2" selected="">PSP Admin</option>
                                                        <option value="3" selected="">PSP Analyst</option>
                                                    </select>
                                                </div>
                                            </div>



                                            <div class="form-group">
                                                <label class="col-md-3 control-label">Send user notification</label>
                                                <div class="col-md-6">
                                                    <label class="mt-checkbox mt-checkbox-outline">
                                                        <input name="tnc" type="checkbox" checked> Send the new user an email about their account<span></span>
                                                    </label>
                                                </div></label>
                                            </div>

                                        </form>
                                    </div>
                                </div>

                                <div class="portlet-footer">
                                    <label class="col-md-3 control-label"></label>
                                    <div class="col-md-6">
                                        <button type="button" id="button_add" onclick="" class="btn yellow-gold mt-sweetalert" data-title="Success" data-message="Success message" data-type="success" data-allow-outside-click="true" data-confirm-button-class="btn-success">Add new user</button>
                                        <button onclick="$('#tabUserManagement02').removeClass('active'); $('#tabUserManagement01').addClass('active');" type="button" class="btn default">Cancel</button>
                                    </div>
                                </div>


                            </div>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


