@using Operando_AdministrationConsole.Models.PspAdminModels
@model ModuleSettingsViewModel.ModuleConfigurationDetailsModel

<div class="portlet">
    <div class="portlet-title">
        <div class="caption" style="min-height: 52px; margin-top: 9px">
            <span class="caption-subject font-dark bold uppercase">@Model.ModuleName</span>
        </div>
    </div>
</div>

<div class="portlet-body">
    <form action="#" class="form-horizontal">
        <div class="form-body">
            <div class="form-group">
                <div class="col-md-12">
                    <textarea class="form-control" readonly rows="15">@Model.ConfigurationDescription</textarea>
                </div>
            </div>
        </div>
    </form>
</div>
