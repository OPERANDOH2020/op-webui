@model Operando_AdministrationConsole.Models.PspAdminModels.ModuleSettingsViewModel

@{
    ViewBag.MenuSection = "PSP Admin";
    ViewBag.Title = "Module settings";
    Layout = "~/Views/Shared/_LayoutOperando.cshtml";
}

<!-- BEGIN PAGE BASE CONTENT -->
<!--  ------------------------------------------------------------------------------------------- -->
<!--  ---------------------------  MODULE SETTINGS ---------------------------------------------- -->
<!--  ------------------------------------------------------------------------------------------- -->

<div class="portlet-body font-grey-gallery">
    <div class="tabbable-custom-operando col-md-2 col-sm-2 col-xs-2">
        <ul class="nav nav-tabs tabs-left">
            @{
                int i = 0;
                foreach (string containerName in Model.ContainerConfigurationDetailsModelsIndexedByContainerName.Keys)
                {
                    i++;
                    bool firstContainer = (i == 1);
                    <li@(firstContainer ? " class=active" : "")>
                        <a href="#menuModules@(i)" data-toggle="tab" aria-expanded="@firstContainer.ToString().ToLower()">@containerName</a>
                    </li>
                }
            }
        </ul>
    </div>

    <!--  -------------------------- NAVIGATION MENU TOP ------------------------------------------ -->

    <div class="col-md-10 col-sm-10 col-xs-10 tabs-custom-operando">
        <div class="col-md-12 col-sm-12 col-xs-12 tabs-custom-operando">
            <div class="tab-content">
                @{
                    int j = 0;
                    foreach (string containerName in Model.ContainerConfigurationDetailsModelsIndexedByContainerName.Keys)
                    {
                        j++;
                        bool firstContainer = (j == 1);
                        <!--  ------------------------------------------------------------------------------------------ -->
                        <!--  -------------------------- BEGIN TAB @j CONTENT ------------------------------------------ -->
                        <!--  ------------------------------------------------------------------------------------------ -->
                        <div class="portlet light tab-pane@(firstContainer ? " active" : "")" id="menuModules@(j)">
                            @Html.Partial("_containerConfigurationDetails", Model.ContainerConfigurationDetailsModelsIndexedByContainerName[containerName])
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
<!-- END PAGE BASE CONTENT -->


@section PagePluginStyles {
    <link href="~/assets/global/plugins/bootstrap-sweetalert/sweetalert.css" rel="stylesheet" type="text/css" />
}

@section PageStyles {
    <STYLE>
        .nav-pills > li.active > a, .nav-pills > li.active > a:focus, .nav-pills > li.active > a:hover {
            color: #fff;
            color: #ffffff;
            background-color: #E87E04;
            border-color: #E87E04;
        }

        .portlet-form .form-actions, .form .form-actions {
            padding: 0;
            margin: 0;
            border: 0;
        }
    </STYLE>

}

@section PagePlugins {
    <script src="~/assets/global/plugins/bootstrap-confirmation/bootstrap-confirmation.min.js" type="text/javascript"></script>
    <script src="~/assets/global/plugins/bootstrap-sweetalert/sweetalert.min.js" type="text/javascript"></script>
}

@section PageScripts {
    <script src="~/assets/pages/scripts/ui-confirmations.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/ui-sweetalert.min.js" type="text/javascript"></script>
    <script src="~/assets/pages/scripts/operando-tab-selector.js" type="text/javascript"></script>
}
