@model Operando_AdministrationConsole.Models.BdaSchedule


<div class="form-group">
    @Html.LabelFor(_ => _.StartDate, "Start: ")
    <div class="input-group">
        @Html.TextBoxFor(_ => _.StartDate, new { @class = "form-control timepicker timepicker-24" })
        <span class="input-group-btn">
            <button class="btn default" type="button">
                <i class="fa fa-clock-o"></i>
            </button>
        </span>
    </div>
</div>

<div class="form-group">
    @Html.LabelFor(_ => _.RepeatIntervalValue, "Run every: ")
    <div class="input-group">
        @Html.TextBoxFor(_ => _.RepeatIntervalValue, new { @class = "form-control", type = "number" })
        <span class="input-group-addon">days</span>
    </div>
</div>