                                                                                <option value="1">Mon</option>
                                                                                <option value="2" selected>Tue</option>
                                                                                <option value="3">Wed</option>
                                                                                <option value="4">Thu</option>
                                                                                <option value="5">Fri</option>
                                                                                <option value="6">Sat</option>
                                                                                <option value="7">Sun</option>
                                                                            </select>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <button type="button" class="btn btn-outline green btn-sm">Add</button>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td>
                                                                        <div class="input-group">
                                                                            <input type="text" class="form-control timepicker timepicker-24">
                                                                            <span class="input-group-btn">
                                                                                <button class="btn default" type="button">
                                                                                    <i class="fa fa-clock-o"></i>
                                                                                </button>
                                                                            </span>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="input-group">
                                                                            <div class="col-md-6">
                                                                                <input class="touchspin_default" type="text" value="0" name="number">
                                                                            </div>
                                                                            <div class="col-md-6">
                                                                                <select id="interval-selection" class="form-control">
                                                                                    <option value="1">Day(s)</option>
                                                                                    <option value="2">Week(s)</option>
                                                                                    <option value="3" selected>Month(s)</option>
                                                                                    <option value="4">Year(s)</option>
                                                                                </select>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="input-group">
                                                                            <input class="touchspin_days_in_month" type="text" value="0" name="number">
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <button type="button" class="btn btn-outline green btn-sm">Add</button>
                                                                    </td>
                                                                </tr>
                                                                <tr>
                                                                    <td>
                                                                        <div class="input-group">
                                                                            <input type="text" class="form-control timepicker timepicker-24">
                                                                            <span class="input-group-btn">
                                                                                <button class="btn default" type="button">
                                                                                    <i class="fa fa-clock-o"></i>
                                                                                </button>
                                                                            </span>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="input-group">
                                                                            <div class="col-md-6">
                                                                                <input class="touchspin_default" type="text" value="0" name="number">
                                                                            </div>
                                                                            <div class="col-md-6">
                                                                                <select id="interval-selection" class="form-control">
                                                                                    <option value="1">Day(s)</option>
                                                                                    <option value="2">Week(s)</option>
                                                                                    <option value="3">Month(s)</option>
                                                                                    <option value="4" selected>Year(s)</option>
                                                                                </select>
                                                                            </div>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <div class="input-group input-medium date date-picker" data-date-format="dd-mm" data-date-start-date="+0d">
                                                                            <input type="text" class="form-control" readonly>
                                                                            <span class="input-group-btn">
                                                                                <button class="btn default" type="button">
                                                                                    <i class="fa fa-calendar"></i>
                                                                                </button>
                                                                            </span>
                                                                        </div>
                                                                    </td>
                                                                    <td>
                                                                        <button type="button" class="btn btn-outline green btn-sm">Add</button>
                                                                    </td>
                                                                </tr>*@
                                                            </tbody>
                                                        </table>
                                                    </div>
                                                </div>                                       
                                            </td>
                                        </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                        <!-- END TAB 2 (SCHEDULES) CONTENT -->
                    </div>
                </div>
            </div>
        </div>
        <!-- END PORTLET -->
    </div>
</div>
<!-- END PAGE BASE CONTENT -->

