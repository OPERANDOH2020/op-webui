@model Operando_AdministrationConsole.Models.OspAdminModels.RequestNewBdaExtractModel

@{
    ViewBag.MenuSection = "OSP Admin";
    ViewBag.Title = "Request New BDA Extraction";
    Layout = "~/Views/Shared/_LayoutOperando.cshtml";
}
<div class="row">
    <div class="col-xs-12">
        <div class="m-heading-1 border-grey-silver m-bordered">
            <p>
                From this page you can request a new Big Data extraction.
            </p>
        </div>
        @using (Html.BeginForm("RequestNewBdaExtract", "OspAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            <div class="portlet light bordered">
                <h4 class="modal-title">Request a new extract</h4>
                <p>Enter the information below, and we will find an appropriate person to discuss your request with you.</p>
                
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        @Html.ValidationSummary()
                    </div>
                }

                <div class="scroller" style="height: 300px" data-always-visible="1" data-rail-visible1="1">
                    <div class="row">
                        <div class="form-body">
                            <div class="form-group">
                                <label class="col-md-3 control-label">Your name</label>
                                <div class="col-md-9">
                                    <div class="input-inline input-large">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-user"></i>
                                            </span>
                                            @Html.TextBoxFor(_ => _.RequesterName, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(_ => _.RequesterName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Your email address</label>
                                <div class="col-md-9">
                                    <div class="input-inline input-large">
                                        <div class="input-group">
                                            <span class="input-group-addon">
                                                <i class="fa fa-envelope"></i>
                                            </span>
                                            @Html.TextBoxFor(_ => _.ContactEmail, new { @class = "form-control" })
                                        </div>
                                    </div>
                                    @Html.ValidationMessageFor(_ => _.ContactEmail, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-md-3 control-label">Summary of request</label>
                                <div class="col-md-9">
                                    <div class="input-inline input-large">
                                        @Html.TextAreaFor(_ => _.RequestSummary, new { rows = 5, @class = "form-control" })
                                    </div>
                                    @Html.ValidationMessageFor(_ => _.RequestSummary, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <button type="button" data-dismiss="modal" class="btn dark btn-outline">Close</button>
                <button type="submit" class="btn yellow-gold">Submit</button>
            </div>
        }
    </div>
</div>


