                                                    <input type="text" id="StartDate_Sch_@item.ID" class="form-control" value="@item.StartDate" readonly>
                                                    <span class="input-group-btn">
                                                        <button class="btn default" type="button">
                                                            <i class="fa fa-calendar"></i>
                                                        </button>
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Repeat every</label>
                                        <div class="col-md-9">
                                            <div class="input-group">
                                                <div class="col-md-6">
                                                    <input class="touchspin_default" id="RepeatEveryNumb_Sch_@item.ID" type="text" value="@item.RepeatEveryNumb" name=" number">
                                                </div>
                                                <div class="col-md-6">
                                                    <select id="RepeatEveryType_Sch_@item.ID" class="form-control">
                                                        @foreach (var tmp in item.RepeatEveryTypeOption)
                                                        {
                                                            @Html.Raw(tmp)
                                                        }>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">On</label>
                                        <div class="col-md-9">
                                            <div class="col-md-12">
                                                <div class="input-group">
                                                    <select id="DayOfWeek_Sch_@item.ID" class="bs-select form-control" multiple>
                                                        @foreach (var tmp in item.DayOfWeekOption)
                                                        {
                                                            @Html.Raw(tmp)
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label class="col-md-3 control-label">Storage for</label>
                                        <div class="col-md-9">
                                            <div class="input-group">
                                                <div class="col-md-6">
                                                    <input id="StoragePeriodNumb_Sch_@item.ID" class="touchspin_default" type="text" disabled value="@item.StoragePeriodNumb" name="number" readonly>
                                                </div>
                                                <div class="col-md-6">
                                                    <select id="StoragePeriodType_Sch_@item.ID" class=" form-control" disabled>
                                                        @foreach (var tmp in item.StoragePeriodTypeOption)
                                                        {
                                                            @Html.Raw(tmp)
                                                        }>
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" data-dismiss="modal" class="btn dark btn-outline">Close</button>
                    <button type="button" id="button_Sch_@item.ID" onclick="javascript:salvaSchedule(@item.ID);" data-dismiss="modal" class="btn yellow-gold mt-sweetalert" data-title="Success" data-message="Success message" data-type="success" data-allow-outside-click="true" data-confirm-button-class="btn-success">Sumbit</button>
                </div>
            </div>
        </div>
    </div>
