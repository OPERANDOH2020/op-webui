    function undoScheduleDetail(Parent) {

        var dt = new Date();

        var time = dt.getHours() + ":" + dt.getMinutes();

        $('#' + Parent+ "-"+"clock").val(time);

        $('#' + Parent+ "-"+"numtype").val(0) ;

        var valType = ObjectType(Parent);

        switch (valType.toLowerCase()) {
            case 'week(s)':
                {
                    $('#' + Parent + "-" + "reportb-days-list").val("2");
                }
                break;
            case 'month(s)':
                {
                    $('#' + Parent + "-" + "reportc-numtday").val(1);
                }
                break;
            case 'year(s)':
                {
                    $('#' + Parent + "-" + "reportd-date").val(null);
