    function SendMailNewReport(e)
    {
        e.preventDefault();


        var valName = $('#NameNewReport').val()
        var valEmail = $('#EmailNewReport').val()
        var valDescription = $('#SummaryNewReport').val()

        if (valName.length == 0 || valEmail.lenght == 0 || valDescription.length == 0) {

            alert("the fields are not are properly completed");

            if (valName.length == 0) {

                $("#NameNewReport").css("border", "1px solid red");
            }

            if (valEmail.length == 0) {
                $("#EmailNewReport").css("border", "1px solid red");
            }

            if (valDescription.length == 0) {
                $("#SummaryNewReport").css("border", "1px solid red");
            }

            if (valName.length == 0) {
                $("#NameNewReport").focus();
            }
            else {

                if (valEmail.length == 0) {
                    $("#EmailNewReport").focus();
                }
                else {
                    if (valDescription.length == 0) {
                        $("#SummaryNewReport").focus();
                    }
                }
            }



        }
        else {



            $.ajax({
                async: false,
                type: "post",
                url: "../ASPXSaveAjax/sendmailnewreport.aspx",
                data: { name: valName, email: valEmail, description: valDescription },
                datatype: "text",
                success: function (data) {
                    $('#SendMailNewReport').addClass('mt-sweetalert');
                    $('#modalNewRequest').modal('hide');
                    reloadSweetAlert($('#SendMailNewReport'));


                },
                error: function (xhr, status, error) {
                    $('#SendMailNewReport').addClass('mt-sweetalert');
                    $('#SendMailNewReport').removeAttr("data-title");
                    $('#SendMailNewReport').removeAttr("data-message");
                    $('#SendMailNewReport').removeAttr("data-type");
                    $('#SendMailNewReport').removeAttr("data-confirm-button-class");
                    $('#SendMailNewReport').attr("data-title", "error");
