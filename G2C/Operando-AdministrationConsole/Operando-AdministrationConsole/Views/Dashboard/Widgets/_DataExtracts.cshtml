@model IEnumerable<Operando_AdministrationConsole.Models.DashboardModels.WidgetModels.DataExtractsModel>

<div class="portlet light bordered">
    <div class="portlet-title">
        <div class="caption">
            <span class="caption-subject font-dark bold uppercase">MOST RECENT DATA EXTRACTS</span>
        </div>
        <div class="tools">
            <a href="@Url.Action("BigDataAnalytics", "OspAdmin")">View all <i class="icon-arrow-right"></i></a>
        </div>
    </div>
    <div class="portlet-body">
        <table class="table table-striped table-bordered table-hover">
            <thead>
                <tr>
                    <th> Date </th>
                    <th> Job </th>
                    <th> Version </th>
                    <th class="text-center"> Actions </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var extract in Model.OrderBy(_ => _.ExtractionDate))
                {
                    <tr class="">
                        <td> @extract.ExtractionDate.ToString("g") </td>
                        <td> @extract.JobName </td>
                        <td> @extract.Version </td>
                        <td class="text-center">
                            <a class="btn btn-circle btn-sm yellow-gold" href="@extract.DownloadUrl"> Download&nbsp;&nbsp;<i class="fa fa-download"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>