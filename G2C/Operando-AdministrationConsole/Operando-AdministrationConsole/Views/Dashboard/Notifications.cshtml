@using Operando_AdministrationConsole.Models.DashboardModels
@model IList<NotificationsModel>
@{
    ViewBag.Title = Resources.WebResources.NotificationsTitle;
    Layout = "~/Views/Shared/_LayoutOperando.cshtml";
}

<!-- BEGIN PAGE BASE CONTENT -->

<div class="m-heading-1 border-grey-silver m-bordered">
    <p> @Resources.WebResources.NotificationsDescription
        <br /><br />
    </p>
</div>

<div class="portlet light">
    <div class="portlet-title">
        <div class="caption col-md-5">
            <span class="caption-subject bold uppercase"> @Resources.WebResources.NotificationsTitle </span>
        </div>
    </div>
    <div class="portlet-body">

                <table class="table table-striped table-bordered table-hover order-column" id="notifications_list">
                    <thead>
                        <tr>
                            <th>@Resources.WebResources.NotificationsType</th>
                            <th>@Resources.WebResources.NotificationsMessage</th>
                            <th>@Resources.WebResources.NotificationsDate</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var notification in Model)
                    {
                        <tr>
                            <td>@notification.Title</td>
                            <td>@notification.Description.ToString().Replace("Your privacy settings were updated because of changes you made through the dashboard.", @Resources.WebResources.DashboardSettingsUpdated)</td>
                            <td>@notification.TimeStamp</td>
                        </tr>
                    }
                    </tbody>
                </table>

    </div>
</div>

<!-- END PAGE BASE CONTENT -->



