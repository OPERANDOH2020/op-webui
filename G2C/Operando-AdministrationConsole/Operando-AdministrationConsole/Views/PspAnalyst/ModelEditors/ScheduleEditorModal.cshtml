@model Operando_AdministrationConsole.Models.PspAnalystModels.BigDataScheduleModel

<div class="scroller" style="height: 400px" data-always-visible="1" data-rail-visible1="1">
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                <label class="col-md-3 control-label">OSPs</label>
                <div class="col-md-9">
                    @Html.DropDownListFor(_ => _.OspScheduled, new SelectList(Model.AvailableOsps), new { @class = "form-control bs-select" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-3 control-label">Job</label>
                <div class="col-md-9">
                    @Html.DropDownListFor(_ => _.JobId, Model.AvailableJobs.Select(_ => new SelectListItem { Text = _.JobName, Value = _.JobId }), new { @class = "form-control bs-select" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(_ => _.RepeatIntervalDays, "Start date", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    <div class="input-group input-medium">
                        @Html.TextBoxFor(_ => _.StartTime, new { @class = "form-control timepicker timepicker-24" })
                        <span class="input-group-btn">
                            <button class="btn default" type="button">
                                <i class="fa fa-clock-o"></i>
                            </button>
                        </span>
                    </div>
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(_ => _.RepeatIntervalDays, "Run every", new { @class = "col-md-3 control-label" })
                <div class="col-md-9">
                    <div class="input-group">
                        @Html.TextBoxFor(_ => _.RepeatIntervalDays, new { @class = "form-control", type = "number" })
                        <span class="input-group-addon">days</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>